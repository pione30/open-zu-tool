{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./built",
    "paths": {
      "@/*": [ "./*" ],
      "~/*": [ "./*" ]
    },
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es6",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@nuxt/vue-app/types"
    ],
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
