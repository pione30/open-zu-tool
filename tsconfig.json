{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./built",
    "paths": {
      "@/*": [ "./*" ],
      "~/*": [ "./*" ]
    },
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es6",
    "moduleResolution": "node",
    "types": [
      "@nuxt/vue-app",
      "@types/node"
    ],
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "include": [
    "./pages/**/*",
    "./components/**/*"
  ]
}